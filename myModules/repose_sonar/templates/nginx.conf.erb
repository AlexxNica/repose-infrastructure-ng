upstream app_sonar {
    server 127.0.0.1:9000;
}
server {
    listen [::]:443;

    ssl on;
    ssl_certificate /etc/ssl/certs/openrepose.crt;
    ssl_certificate_key /etc/ssl/private/openrepose.key;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS;

    server_name <%= @fqdn %>>;

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-Proto http;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      proxy_read_timeout 90;

      proxy_pass http://app_sonar$request_uri;
      # Fix the â€œIt appears that your reverse proxy set up is broken" error. This is for jenkins, but probably won't hurt sonar
      proxy_redirect http://app_sonar $scheme://<%= @fqdn %>;
   }
}

server {
    server_name <%= @fqdn %>;
    rewrite ^ https://$server_name$request_uri? permanent;
}
